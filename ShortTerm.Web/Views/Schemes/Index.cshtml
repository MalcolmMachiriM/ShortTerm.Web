@model IEnumerable<SchemeListVM>

@{
    ViewData["Title"] = "Schemes";
}



<p>
    <a asp-action="Create" class="btn btn-outline-success">Create New</a>
</p>
<div class="col-12">

    <div class="box">
        <div class="box-header with-border">
            <h4 class="box-title">Schemes</h4>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">
                <table id="example5" class="text-fade table table-bordered" style="width:100%">
    <thead>
        <tr class="text-dark">
            <th>
                @Html.DisplayNameFor(model => model.RegNo)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RegName)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.CommencementDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ConversionDate)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RulesAmmendment)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.RetentionLimit)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Client)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.RegNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RegName)
            </td> 
            <td>
                @Html.DisplayFor(modelItem => item.CommencementDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ConversionDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RulesAmmendment)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.RetentionLimit)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Client.Surname)
            </td>
            <td>
                    <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa fa-pencil-alt"></i></a> &nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info "><i class="fa fa-info-circle"> </i></a>&nbsp
                    <button data-id="@item.Id" class="btn btn-outline-danger deleteBtn mt-1" type="button"><i class="fa fa-trash"></i></button>
                    <a asp-controller="ProductGroups" asp-action="Index" asp-route-id="@item.Id" class="btn btn-outline-success mt-1"><i class="fa fa-check"></i></a>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>
<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="schemeId" name="Id" />
</form>

@section Scripts{
    <script>
        $(function () {

            $('.deleteBtn').click(function (e) {
                swal({
                    title: "Are you sure?",
                    text: "Are you sure you want to delete this record?",
                    icon: "warning",
                    buttons: true,
                    dangerMode: true,
                }).then((confirm) => {
                    if (confirm) {
                        var btn = $(this);
                        var id = btn.data("id");
                        $('#schemeId').val(id);//get id of form then set value to id in btn
                        $('#deleteForm').submit();//target form and submit< go to delete in controller etc>
                    }
                });
            });
             
        });
    </script>
}