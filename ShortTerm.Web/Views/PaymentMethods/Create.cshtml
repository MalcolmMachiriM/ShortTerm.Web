@model ShortTerm.Web.Models.SystemVariables.PaymentMethodsVM

@{
    ViewData["Title"] = "Create Payment Method";
}

<div class="col-lg-12 col-12">
    <!-- Basic Forms -->
    <div class="box">
        <div class="box-header with-border">
            <h4 class="box-title">Create Payment Method</h4>
        </div>
        <form asp-action="Create">
            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="Method" class="control-label"></label>
                    <input asp-for="Method" class="form-control" />
                    <span asp-validation-for="Method" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="Code" class="control-label"></label>
                    <input asp-for="Code" class="form-control" />
                    <span asp-validation-for="Code" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="BankDetailsRequired" class="control-label"></label>
                    <input asp-for="BankDetailsRequired" class="form-control" />
                    <span asp-validation-for="BankDetailsRequired" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="MobileNumRequired" class="control-label"></label>
                    <input asp-for="MobileNumRequired" class="form-control" />
                    <span asp-validation-for="MobileNumRequired" class="text-danger"></span>
                </div>            
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-dark">Back to List</a>&nbsp;
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
