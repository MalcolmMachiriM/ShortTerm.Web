@model IEnumerable<IndividualProductVM>

@{
    ViewData["Title"] = "Individual Products";
}

<h1>Individual Products</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.ProductGroup)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcessTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPremiumTerm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinPremiumTerm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinSumAssured)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxSumAssured)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.EffectiveDate)
            </th>
            <th>Action</th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductGroup.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcessTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPremiumTerm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinPremiumTerm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSumAssured)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSumAssured)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveDate)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa fa-pencil-alt"></i></a> &nbsp;
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info "><i class="fa fa-info-circle"> </i></a>&nbsp;
                <a asp-action="Delete" asp-route-id="@item.Id" class="btn btn-outline-danger "><i class="fa fa-trash"></i></a>&nbsp;
                <a asp-controller="ProductPolicyRequirements" asp-action="Index" asp-route-id="@item.Id" class="btn btn-outline-primary mt-1 ">Policy Requirements</a>
            </td>
        </tr>
}
    </tbody>
</table>
