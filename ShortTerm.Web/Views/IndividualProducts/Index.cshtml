@model IEnumerable<IndividualProductVM>

@{
    ViewData["Title"] = "Index";
}

<h1>Index</h1>

<p>
    <a asp-action="Create" class="btn btn-outline-success">Create New</a>
</p>
<table class="table">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.ProcessTime)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Retention)
            </th>
           
            <th>
                @Html.DisplayNameFor(model => model.CanBeCeded)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxPremiumTerm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinPremiumTerm)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MinSumAssured)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.MaxSumAssured)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.ProductGroup.Id)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ProcessTime)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Retention)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.SumAssuredBasis)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.CanBeCeded)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.EffectiveDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxPremiumTerm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinPremiumTerm)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MinSumAssured)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MaxSumAssured)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id">Edit</a> |
                <a asp-action="Details" asp-route-id="@item.Id">Details</a> |
                <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
            </td>
        </tr>
}
    </tbody>
</table>
