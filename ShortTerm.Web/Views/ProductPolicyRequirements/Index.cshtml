@model IEnumerable<ProductPolicyRuquirementsListVM>

@{
    ViewData["Title"] = "Policy Requirements";
}

<h1>Policy Rules </h1>

<p>
    <a asp-action="Create" asp-route-id="@ViewContext.RouteData.Values["Id"]" class="btn btn-success">Create New</a>
</p>
<div class="col-12">

    <div class="box">
        <div class="box-header with-border">
            <h4 class="box-title">Policy Rules</h4>
        </div>
        <!-- /.box-header -->
        <div class="box-body">
            <div class="table-responsive">
                <table id="example5" class="text-fade table table-bordered" style="width:100%">
    <thead>
        <tr>
            <th>
                @Html.DisplayNameFor(model => model.IndividualProduct)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Requirement)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.IsMandatory)
            </th>
            <th>
                @Html.DisplayNameFor(model => model.Description)
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.IndividualProduct.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Requirement.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.IsMandatory)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-outline-warning"><i class="fa fa-pencil-alt"></i></a> &nbsp;
                    <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-outline-info "><i class="fa fa-info-circle"> </i></a>&nbsp;
                    <button data-id="@item.Id" class="btn btn-outline-danger deleteBtn " type="button"><i class="fa fa-trash"></i></button>
            </td>
        </tr>
}
    </tbody>
</table>
</div>
</div>
</div>
</div>
<form id="deleteForm" asp-action="Delete">
    <input type="hidden" id="schemeId" name="Id" />
</form>