@model UnderWritingVM

@{
    ViewData["Title"] = "Underwriting";
}

<div class="col-lg-6 col-12">
    <!-- Basic Forms -->
    <div class="box">
        <div class="box-header with-border">
            <h4 class="box-title">Udnderwriting</h4>
        </div>
        <form asp-action="UnderWriting">

            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="ClientId" class="control-label"></label>
                    <select asp-for="ClientId" class ="form-control" asp-items="ViewBag.ClientId"></select>
                </div>
                <div class="panel panel-default">
                    <div class="panel-heading">
                        CLIENT DETAILS
                    </div>
                    <div class="panel-body">
                        <div class="form-horizontal">

                            <div class="form-group">
                                <label class="control-label col-md-4">FIRST NAME</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="@ViewBag.FirstName" readonly />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">SURNAME</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="@ViewBag.Surname" readonly />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">EMPLOYER</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="@ViewBag.Employer" readonly />
                                </div>
                            </div>

                            <div class="form-group">
                                <label class="control-label col-md-4">OCCUPATION</label>
                                <div class="col-md-8">
                                    <input type="text" class="form-control" value="@ViewBag.Occupation" readonly />
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
                <div class="form-group">
                    <label asp-for="PolicyId" class="control-label"></label>
                    <select asp-for="PolicyId" class ="form-control" asp-items="ViewBag.PolicyId"></select>
                </div>
                <div class="form-group">
                    <label asp-for="ClientProposedValueOfAsset" class="control-label"></label>
                    <input asp-for="ClientProposedValueOfAsset" class="form-control" />
                    <span asp-validation-for="ClientProposedValueOfAsset" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="StateOfPropertyId" class="control-label"></label>
                    <input asp-for="StateOfPropertyId" class="form-control" />
                    <span asp-validation-for="StateOfPropertyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="LocationOfPropertyId" class="control-label"></label>
                    <input asp-for="LocationOfPropertyId" class="form-control" />
                    <span asp-validation-for="LocationOfPropertyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SecurityOfPropertyScoreId" class="control-label"></label>
                    <input asp-for="SecurityOfPropertyScoreId" class="form-control" />
                    <span asp-validation-for="SecurityOfPropertyScoreId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="PrimaryUseOfPropertyScoreId" class="control-label"></label>
                    <input asp-for="PrimaryUseOfPropertyScoreId" class="form-control" />
                    <span asp-validation-for="PrimaryUseOfPropertyScoreId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="AdditionalNotes" class="control-label"></label>
                    <input asp-for="AdditionalNotes" class="form-control" />
                    <span asp-validation-for="AdditionalNotes" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-dark">Back to List</a>
                    <input type="submit" value="Create" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>


