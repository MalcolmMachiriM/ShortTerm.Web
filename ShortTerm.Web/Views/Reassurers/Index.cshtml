                @Html.DisplayFor(modelItem => item.ClientId)
            </td>
            <td>
            <td>
                 @Html.DisplayFor(modelItem => item.ReassuranceType)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractStartDate)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ContractEndDate)
            </td>
