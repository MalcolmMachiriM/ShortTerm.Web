@model ShortTerm.Web.Data.PolicyReassurance

@{
    ViewData["Title"] = "Edit";
}

<div class="col-lg-6 col-12">
    <!-- Basic Forms -->
    <div class="box">
        <div class="box-header with-border">
            <h4 class="box-title">Edit Reassurance</h4>
        </div>
        <form asp-action="Edit">

            <div class="box-body">
                <div asp-validation-summary="ModelOnly" class="text-danger"></div>
                <div class="form-group">
                    <label asp-for="PolicyId" class="control-label"></label>
                    <input asp-for="PolicyId" class="form-control" />
                    <span asp-validation-for="PolicyId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="SumAssured" class="control-label"></label>
                    <input asp-for="SumAssured" class="form-control" />
                    <span asp-validation-for="SumAssured" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReassurerId" class="control-label"></label>
                    <input asp-for="ReassurerId" class="form-control" />
                    <span asp-validation-for="ReassurerId" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="ReassuranceTypeId" class="control-label"></label>
                    <select asp-for="ReassuranceTypeId" class="form-control" asp-items="ViewBag.ReassuranceTypeId"></select>
                    <span asp-validation-for="ReassuranceTypeId" class="text-danger"></span>
                </div>
                <input type="hidden" asp-for="Id" />
                <div class="form-group">
                    <label asp-for="DateCreated" class="control-label"></label>
                    <input asp-for="DateCreated" class="form-control" />
                    <span asp-validation-for="DateCreated" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <label asp-for="DateModified" class="control-label"></label>
                    <input asp-for="DateModified" class="form-control" />
                    <span asp-validation-for="DateModified" class="text-danger"></span>
                </div>
                <div class="form-group">
                    <a asp-action="Index" class="btn btn-dark">Back to List</a>
                    <input type="submit" value="Save" class="btn btn-primary" />
                </div>
            </div>
        </form>
    </div>
</div>

